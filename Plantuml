@startuml
!include <cloud/cloud>
!include <cloud/internet>
!include <aws/icons>
!include <aws/general>
!include <office/office>
!include <material/material>

!define SERVICE_COLOR #990000
!define SYSTEM_COLOR #000099
!define TOOL_COLOR #569926

cloud "ServiceNow Cloud" as servicenow
cloud "OneDrive" as onedrive {
  icon office_onedrive, white
  "Microsoft Azure Cloud" 
}
cloud "Confluence Page" as confluence {
  icon aws_general, white
  "Confluence Page"
}

rectangle "eBonding (GS)" as ebonding
diamond "PM-template.docx" as pmtemplate

servicenow -d-> onedrive
onedrive -d-|> servicenow
servicenow -r-> ebonding
ebonding -d-> pmtemplate
ebonding -r-> confluence

note right of ebonding
  POST: /ims/create-post-mortem?incidentNo=IN3333
  response: attachment (MSWord docs)
  GET:/ims/parse-post-mortem?incidentNo=IN3333
  response: application/json
end note

note left of onedrive 
  1) Upload a document
  2) download a document
  3) share a document to users
end note

note left of servicenow
  1) Create Incident in IMS
  2) Mitigate/Resole Incident in IMS
  3) Create Post-Mortem
end note

@enduml
