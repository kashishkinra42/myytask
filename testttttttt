const readZipFile = (zipFilePath, fileName) => {
  const zip = new AdmZip(zipFilePath);
  const zipEntries = zip.getEntries();  // Log all entries in the ZIP file
  log(`Entries in ZIP file: ${zipEntries.map(entry => entry.entryName).join(', ')}`);

  const zipEntry = zip.getEntry(fileName);
  if (!zipEntry) {
    throw new Error(`Entry not found: ${fileName}`);
  }
  const content = zipEntry.getData().toString('utf8');
  return content;
};
